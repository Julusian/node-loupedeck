{
	"extends": "@tsconfig/node20/tsconfig.json",
	"include": ["src/**/*"],
	"compilerOptions": {
		"module": "node20",
		"importHelpers": true,
		"noEmitOnError": false,
		"esModuleInterop": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	}
}
