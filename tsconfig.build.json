{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"include": ["scripts/**/*"],
	"compilerOptions": {
		"baseUrl": "./packages",
		"paths": {
			"*": ["./node_modules/*"],
			"@elgato-stream-deck/core": ["core/src"],
			"@elgato-stream-deck/node": ["node/src"],
			"@elgato-stream-deck/webhid": ["webhid/src"]
		}
	}
}
