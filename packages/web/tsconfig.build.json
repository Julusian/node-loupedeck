{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"include": ["src/**/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"],
			"@loupedeck/web": ["./src/index.ts"]
		},
		"lib": ["dom"],
		"types": ["w3c-web-serial"],
		"importHelpers": false
	}
}
